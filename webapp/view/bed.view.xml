	<App>
		<pages>
			<Page title="Turn Bedroom Loghts on and off">
				<content>
				    <Breadcrumbs xmlns="sap.m" currentLocationText="Lights Control" id="breadcrumbs1">
				        <Link text="Level 1"/>
				        <Link text="Level 2"/>
				        </Breadcrumbs>
				    <RadioButtonGroup xmlns="sap.m" columns="1" id="group0">
				        <buttons>
				            <RadioButton text="Turn on" id="button2"/>
				            <RadioButton text="Turn off" id="button3"/>
				            </buttons>
				        
				    </RadioButtonGroup>
				    <FlexBox width="100%" id="box0"/><ToggleButton xmlns="sap.m" text="Apply" id="button1" activeIcon="sap-icon://lightbulb" icon="sap-icon://energy-saving-lightbulb" pressed="true" tap="changeicon"/>
